{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vdl.varavel.com/schemas/v0/plugin_output.schema.json",
  "$ref": "#/$defs/Output",
  "$defs": {
    "File": {
      "properties": {
        "path": {
          "type": "string"
        },
        "content": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "path",
        "content"
      ]
    },
    "Output": {
      "properties": {
        "files": {
          "items": {
            "$ref": "#/$defs/File"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "files"
      ]
    }
  },
  "title": "VDL Plugin Output Schema",
  "description": "JSON Schema for the VDL Plugin Output Protocol"
}