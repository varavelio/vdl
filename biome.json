{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/out",
      "!**/gen",
      "!**/tmp",
      "!**/temp",
      "!**/.svelte-kit",
      "!**/_app",
      "!**/.astro",
      "!**/_astro"
    ]
  },
  "css": {
    "parser": { "tailwindDirectives": true }
  },
  "formatter": {
    "enabled": true,
    "includes": [
      "**/*.js",
      "**/*.jsx",
      "**/*.mjs",
      "**/*.cjs",
      "**/*.ts",
      "**/*.tsx",
      "**/*.mts",
      "**/*.cts",
      "**/*.svelte",
      "**/*.astro"
    ]
  },
  "linter": {
    "enabled": true,
    "includes": [
      "**",
      "!**/*.test.ts"
    ],
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  }
}
