{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/out",
      "!**/gen",
      "!**/tmp",
      "!**/temp",
      "!**/.svelte-kit",
      "!**/_app",
      "!**/.astro",
      "!**/_astro"
    ]
  },
  "css": {
    "parser": { "tailwindDirectives": true }
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "includes": ["**", "!**/*.test.ts"],
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/*.svelte", "**/*.astro"],
      "linter": {
        "rules": {
          "style": {
            "useConst": "off",
            "useImportType": "off"
          },
          "correctness": {
            "noUnusedVariables": "off",
            "noUnusedImports": "off"
          }
        }
      }
    }
  ]
}
