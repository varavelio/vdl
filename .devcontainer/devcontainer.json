{
  "build": {
    "dockerfile": "./Dockerfile",
    "context": ".."
  },
  "remoteUser": "root",
  "mounts": [
    "source=${localEnv:HOME}/.claude,target=/root/.claude,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.config/opencode,target=/root/.config/opencode,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.local/share/opencode,target=/root/.local/share/opencode,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "uforg.urpc",
        "golang.go",
        "svelte.svelte-vscode",
        "bradlc.vscode-tailwindcss",
        "Chanzhaoyu.svelte-5-snippets",
        "esbenp.prettier-vscode",
        "vitest.explorer",
        "biomejs.biome",
        "Dart-Code.dart-code"
      ],
      "settings": {
        "urpc.enable": false,
        "files.eol": "\n",
        "editor.formatOnSave": true,
        "editor.foldingStrategy": "indentation",
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "css.validate": false,
        "svelte.enable-ts-plugin": true,
        "[go]": {
          "editor.defaultFormatter": "golang.go"
        },
        "go.lintTool": "golangci-lint",
        "go.lintFlags": ["--fast"],
        "go.testFlags": ["-v"]
      }
    }
  }
}
